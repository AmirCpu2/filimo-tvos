<?xml version="1.0" encoding="UTF-8" ?>
<document>
    <head>
        <style>
            .paddedOverlay {
                padding: 0 16 16 0;
            }
            .shadowedTitle {
                text-shadow: 2px 2px 8px #000000;
            }
        </style>
    </head>
    <stackTemplate>
        <banner>
            <title>دسته‌بندی‌ها</title>
        </banner>
        <collectionList>
            <grid>
                <prototypes>
                    <lockup productsInCategoryDocumentURL="/XMLs/ProductsInCategory.xml" prototype="categoryArtwork" class="lockup">
                        <img binding="@src:{cover};" width="830" height="230"/>
                        <overlay class="paddedOverlay">
                            <title class="shadowedTitle" binding="textContent:{title};" />
                        </overlay>
                    </lockup>
                </prototypes>
                <section binding="items:{items};" lazyDataURL="https://www.filimo.com/etc/api/category/devicetype/tvweb" />
            </grid>
        </collectionList>
    </stackTemplate>
</document>
