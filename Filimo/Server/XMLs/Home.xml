<?xml version="1.0" encoding="UTF-8" ?>
<document>
    <head>
        <style>
            .headerLogo {
                tv-align: right;
                width: 295;
                height: 90;
            }
            .artworkTitle {
                tv-align: right;
                tv-text-max-lines: 2;
                tv-placeholder: movie;
            }
            .lockup {
                padding: 0 0 72 0;
            }
            .loginButton {
                tv-align: left;
                text-align: center;
                tv-text-style: body;
            }
        </style>
    </head>
    <stackTemplate>
        <prototypes>
            <lockup productDocumentURL="/XMLs/Product.xml" prototype="homeArtwork" class="lockup">
                <img binding="@src:{movie_img_b};" width="262" height="350" />
                <title class="artworkTitle" binding="textContent:{movie_title};" />
            </lockup>
        </prototypes>
        <banner>
            <row>
                <img class="headerLogo" src="/Resources/logo.png" alt="Filimo Logo" />
                <button id="loginButton" loginDocumentURL="/XMLs/Login.xml" class="loginButton">
                    <title>ورود</title>
                </button>
            </row>
        </banner>
        <collectionList lazyDataURL="https://www.filimo.com/etc/api/homepage/devicetype/tvweb">
        </collectionList>
    </stackTemplate>
</document>
