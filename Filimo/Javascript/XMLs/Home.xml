<?xml version="1.0" encoding="UTF-8" ?>
<document>
    <head>
        <style>
            .headerLogo {
                tv-position: top-right;
                width: 295;
                height: 90;
            }
            .artworkTitle {
                tv-align: right;
                tv-text-max-lines: 2;
                tv-placeholder: movie;
            }
            .lockup {
                padding: 0 0 72 0;
            }
            .loginButton {
                text-align: center;
                tv-text-style: body;
                padding: 12;
            }
            .reloadButton {
                text-align: center;
                tv-text-style: body;
                margin: 0 20 0 20;
            }
            .leftAlignedRow {
                tv-position: bottom-left;
                tv-align: left;
            }
        </style>
    </head>
    <loadingTemplate>
        <activityIndicator>
            <title>در حال دریافت اطلاعات …</title>
        </activityIndicator>
    </loadingTemplate>
    <stackTemplate>
        <banner>
            <organizer>
                <img class="headerLogo" srcset="/Resources/logo.png (theme:light), /Resources/logo_dark.png (theme:dark)" alt="Filimo Logo" />
                <row class="leftAlignedRow">
                    <buttonLockup id="reloadButton" class="reloadButton">
                        <badge srcset="/Resources/reload.png 1x, /Resources/reload@2x.png 2x" width="60" height="60"/>
                        <title>تازه کردن</title>
                    </buttonLockup>
                    <buttonLockup id="loginButton" loginDocumentURL="/XMLs/Login.xml" class="loginButton">
                        <badge srcset="/Resources/login.png 1x, /Resources/login@2x.png 2x" width="60" height="60"/>
                        <title>ورود</title>
                    </buttonLockup>
                </row>
            </organizer>
        </banner>
        <collectionList>
            <prototypes>
                <lockup productDocumentURL="/XMLs/Product.xml" prototype="homeArtwork" class="lockup">
                    <img binding="@src:{movie_img_b};" width="262" height="350" />
                    <title class="artworkTitle" binding="textContent:{movie_title};" />
                </lockup>
            </prototypes>
        </collectionList>
    </stackTemplate>
</document>
