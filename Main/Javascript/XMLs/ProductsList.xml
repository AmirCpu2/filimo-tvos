<?xml version="1.0" encoding="UTF-8" ?>
<document>
    <head>
        <style>
            .placeholder {
                tv-placeholder: movie;
            }
            .englishTitle {
                text-align: center;
                tv-text-style: caption2;
            }
        </style>
    </head>
    <stackTemplate>
        <banner>
            <title></title>
        </banner>
        <collectionList>
            <grid>
                <prototypes>
                    <lockup productDocumentURL="/XMLs/Product.xml" prototype="productsList">
                        <img class="placeholder" binding="@src:{movie_img_b};" width="275" height="366" />
                        <title binding="textContent:{movie_title};" />
                        <text class="englishTitle" binding="textContent:{movie_title_en};" />
                    </lockup>
                </prototypes>
                <section binding="items:{items};" />
            </grid>
        </collectionList>
    </stackTemplate>
</document>
